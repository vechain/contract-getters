{
    "name": "vechain-getters",
    "private": true,
    "packageManager": "yarn@4.5.1",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build": "yarn workspaces foreach --all -pt run build",
        "dev": "yarn workspaces foreach --all -pt run dev --parallel",
        "test": "yarn workspaces foreach --all -pt run test",
        "lint": "yarn workspaces foreach --all -pt run lint",
        "typecheck": "yarn workspaces foreach --all -pt run typecheck",
        "clean": "yarn workspaces foreach --all -pt run clean",
        "core:dev": "yarn workspace @vechain/contract-getters dev",
        "core:build": "yarn workspace @vechain/contract-getters build",
        "core:typecheck": "yarn workspace @vechain/contract-getters typecheck",
        "example:nodejs:build": "yarn workspace nodejs-getters-example build",
        "example:nodejs:start": "yarn workspace nodejs-getters-example start",
        "example:nodejs:dev": "yarn workspace nodejs-getters-example dev",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,md}": [
            "prettier --write"
        ],
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@types/node": "^24.3.1",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "@vechain/vechain-contract-types": "1.4.1",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "ethers": "^6.13.0",
        "husky": "^9.1.7",
        "lint-staged": "11.1.2",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "typechain": "^8.3.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.40.0"
    },
    "resolutions": {
        "ansi-regex": "5.0.1",
        "ansi-styles": "4.3.0",
        "chalk": "4.1.2",
        "color-convert": "2.0.1",
        "color-name": "1.1.4",
        "color-string": "1.9.1",
        "debug": "4.3.4",
        "error-ex": "1.3.2",
        "is-arrayish": "0.3.2",
        "simple-swizzle": "0.2.2",
        "slice-ansi": "4.0.0",
        "strip-ansi": "6.0.1",
        "supports-color": "7.2.0",
        "wrap-ansi": "7.0.0"
    }
}

{
    "name": "vechain-getters",
    "private": true,
    "packageManager": "yarn@1.22.22",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "clean": "turbo run clean",
        "core:dev": "yarn workspace @vechain/getters-core dev",
        "core:build": "yarn workspace @vechain/getters-core build",
        "core:typecheck": "yarn workspace @vechain/getters-core typecheck",
        "example:nodejs:build": "yarn workspace nodejs-getters-example build",
        "example:nodejs:start": "yarn workspace nodejs-getters-example start",
        "example:nodejs:dev": "yarn workspace nodejs-getters-example dev",
        "copy:abis": "node scripts/copy-abis.js",
        "gen:typechain": "typechain --target ethers-v6 --out-dir packages/getters-core/src/typechain-types temp-abis/*.json",
        "cleanup:abis": "node scripts/cleanup-abis.js",
        "gen:types": "yarn copy:abis && yarn gen:typechain && yarn cleanup:abis",
        "postinstall": "yarn gen:types || true",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,md}": [
            "prettier --write"
        ],
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "@typechain/ethers-v6": "^0.5.1",
        "b32": "github:vechain/b32",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "ethers": "^6.13.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "turbo": "^2.0.6",
        "typechain": "^8.3.2",
        "typescript-eslint": "^8.40.0"
    },
    "resolutions": {
        "ansi-regex": "5.0.1",
        "ansi-styles": "4.3.0",
        "chalk": "5.6.2",
        "color-convert": "2.0.1",
        "color-name": "1.1.4",
        "color-string": "1.9.1",
        "debug": "4.3.4",
        "error-ex": "1.3.2",
        "is-arrayish": "0.3.2",
        "simple-swizzle": "0.2.2",
        "slice-ansi": "4.0.0",
        "strip-ansi": "6.0.1",
        "supports-color": "7.2.0",
        "wrap-ansi": "7.0.0"
    }
}
